# Environment Configuration
# Copy this file to .env and customize for your environment
# NEVER commit .env to version control - it contains sensitive data!

# Application Configuration
# Use 'development' for dev, 'production' for prod, 'testing' for tests
APP_NAME="Security Scanner Tool"
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=security_scanner
DB_USERNAME=root
DB_PASSWORD=

# Database SSL Configuration (recommended for production)
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=
DB_SSL_VERIFY=false

# Read Replica Database (optional, for scaling)
DB_READ_HOST=
DB_READ_PORT=
DB_READ_USERNAME=
DB_READ_PASSWORD=

# Test Database (for running tests)
DB_TEST_HOST=localhost
DB_TEST_PORT=3306
DB_TEST_DATABASE=security_scanner_test
DB_TEST_USERNAME=root
DB_TEST_PASSWORD=

# Database Connection Pool
DB_MAX_CONNECTIONS=10

# Email Configuration (for notifications)
EMAIL_ENABLED=false
EMAIL_FROM=noreply@security-scanner.local
EMAIL_FROM_NAME="Security Scanner"
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_ENCRYPTION=tls

# Webhook Configuration (for external integrations)
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# Logging Paths (adjust for your server setup)
# Use relative paths like ./logs/ for development
LOG_ACCESS_PATH=/var/log/security-scanner/access.log
LOG_ERROR_PATH=/var/log/security-scanner/error.log
LOG_SCHEDULER_PATH=/var/log/security-scanner/scheduler.log
LOG_SECURITY_PATH=/var/log/security-scanner/security.log

# Security Settings
# Adjust these based on your security requirements
CSRF_TOKEN_LIFETIME=3600
SESSION_LIFETIME=7200
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_TIME_WINDOW=60

# Scheduler Settings
SCHEDULER_LOCK_TIMEOUT=300
SCHEDULER_MAX_EXECUTION_TIME=1800
SCHEDULER_MEMORY_LIMIT=512M
SCHEDULER_RETRY_ATTEMPTS=3
SCHEDULER_RETRY_DELAY=60

# Test Settings
# Set TEST_VERIFY_SSL=false for development with self-signed certificates
TEST_TIMEOUT=30
TEST_USER_AGENT="Security Scanner Bot/1.0"
TEST_MAX_REDIRECTS=5
TEST_VERIFY_SSL=true

# Caching Settings
# Lower values for development, higher for production
CACHE_DEFAULT_TTL=3600
CACHE_QUERY_TTL=600
CACHE_STATIC_ASSETS_TTL=86400

# Advanced Security Configuration
SECURITY_HTTPS_ENFORCED=false
SECURITY_FRAME_OPTIONS=DENY
SECURITY_XSS_PROTECTION=1; mode=block
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_CSP_REPORT_ONLY=false
SECURITY_CSP_REPORT_URI=
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=false
SECURITY_CACHE_CONTROL=no-cache, no-store, must-revalidate
SECURITY_PRAGMA=no-cache
SECURITY_EXPIRES=0

# Security Middleware Configuration
SECURITY_RATE_LIMITING_ENABLED=true
SECURITY_RATE_LIMIT=60
SECURITY_RATE_WINDOW=60
SECURITY_MAX_REQUEST_SIZE=10485760

# Blocked IPs (comma-separated, supports CIDR notation)
SECURITY_BLOCKED_IPS=

# Content Security Policy (CSP) Directives
# Leave empty to use defaults, or customize as needed
SECURITY_CSP_DEFAULT_SRC='self'
SECURITY_CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
SECURITY_CSP_STYLE_SRC='self' 'unsafe-inline'
SECURITY_CSP_IMG_SRC='self' data: https:
SECURITY_CSP_FONT_SRC='self'
SECURITY_CSP_CONNECT_SRC='self'
SECURITY_CSP_FORM_ACTION='self'
SECURITY_CSP_BASE_URI='self'
SECURITY_CSP_OBJECT_SRC='none'
SECURITY_CSP_FRAME_ANCESTORS='none'